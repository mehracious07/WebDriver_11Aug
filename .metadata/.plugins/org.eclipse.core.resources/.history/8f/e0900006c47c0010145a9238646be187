package LabSession_August17;

import java.time.Duration;

import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.edge.EdgeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
//import org.testng.annotations.BeforeClass;
import org.testng.annotations.Parameters;
import org.testng.annotations.Test;



public class Lab4TestNg {

	WebDriver driver;
	@Test (groups={"regression"})
	@Parameters({"browser","url"})
	public void LaunchApp(String browser,String url) {
		if(browser.equalsIgnoreCase("chrome")) {
			driver = new ChromeDriver();
		}else if (browser.equalsIgnoreCase("firefox")) {
			driver = new FirefoxDriver();
		}else if (browser.equalsIgnoreCase("edge")) {
			driver = new EdgeDriver();
		}
		driver.get(url);
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(10));
	}
	
	@Test(priority=1,groups= {"regression"})
	public void SelectAndAddItem() {
		driver.findElement(By.xpath("//a[normalize-space()='Samsung galaxy s6']")).click();
		driver.findElement(By.xpath("//a[normalize-space()='Add to cart']")).click();
	}
	
	@Test(priority=2,groups= {"regression"})
	public void MoveToAlert() throws InterruptedException {
		Thread.sleep(2000);
		Alert a = driver.switchTo().alert();
		a.accept();
	}
	@Test(priority=3)
	 public void PlaceOrder() throws InterruptedException {
		driver.findElement(By.xpath("//a[@id='cartur']")).click();
		Thread.sleep(2000);
		driver.findElement(By.xpath("//button[normalize-space()='Place Order']")).click();
		Thread.sleep(1000);
	}
	
	@Test(priority=5,dependsOnMethods= {"PlaceOrder"})
	public void CustomerDetails() throws InterruptedException {
		driver.findElement(By.xpath("//input[@id='name']")).sendKeys("Sanjay Singh Mehara");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//input[@id='country']")).sendKeys("India");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//input[@id='city']")).sendKeys("Haldwani");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//input[@id='card']")).sendKeys("483245859833");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//input[@id='month']")).sendKeys("July");
		Thread.sleep(1000);
		driver.findElement(By.xpath("//input[@id='year']")).sendKeys("2030");
		Thread.sleep(2000);
		
		driver.findElement(By.xpath("//button[normalize-space()='Purchase']")).click();
	}
	@Test
	public void Quit() {
		driver.quit();
	}
}
