package LabSession_August17;



import java.time.Duration;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;
import org.testng.annotations.BeforeClass;
import org.testng.annotations.Test;

public class Lab1 {
WebDriver driver;

@BeforeClass
public void LaunchWebsite() {
	driver=new ChromeDriver();
	driver.get("https://www.techlistic.com/p/selenium-practice-form.html");
	driver.manage().window().maximize();
	driver.manage().timeouts().implicitlyWait(Duration.ofSeconds(3));
}

@Test
public void FirstAndLastname() {
	driver.findElement(By.xpath("//input[@name='firstname']")).sendKeys("Sanjay");
	driver.findElement(By.xpath("//input[@name='lastname']")).sendKeys("Mehara");
	System.out.println("First name and Second Name is Enterd");
}

@Test
public void Gender() {
	driver.findElement(By.xpath("//input[@id='sex-0']")).click();
	System.out.println("Gender got Selected");
}

@Test
public void YOE() {
driver.findElement(By.xpath("//input[@id='exp-4']")).click();
System.out.println("Experience Selected");
}

@Test
public void DatePicker() {
	driver.findElement(By.xpath("//input[@id='datepicker']")).sendKeys("15/07/2001");
	System.out.println("Date is picked");
}


@Test
public void Profession() {
    List<WebElement> professions = driver.findElements(By.name("profession"));
    for (WebElement profession : professions) {
        if (!profession.isSelected()) { // avoid clicking already selected
            profession.click();
        }
    }
    System.out.println("Professions selected");
}

@Test
public void AutomationTools() {
    List<WebElement> tools = driver.findElements(By.name("tool"));
    for (WebElement tool : tools) {
        if (!tool.isSelected()) {
            tool.click();
        }
    }
    System.out.println("Tools selected");
}


@Test 
public void ContinentSelect() {
	WebElement c = driver.findElement(By.xpath("//select[@id='continents']"));
	Select s = new Select(c);
	s.selectByVisibleText("Africa");
	System.out.println("Continent Selected");
}


@Test
public void UploadFile() {
	WebElement p=driver.findElement(By.xpath("//input[@id='photo']"));
	p.sendKeys("\"C:\\Users\\my pc\\OneDrive\\Pictures\\Screenshots\\Screenshot 2024-03-04 135223.png\"");
	System.out.print("FileUploaded");
}


@Test
public void DownloadFile() {
	driver.findElement(By.linkText("Click here to Download File")).click();
	System.out.print("FileDownloaded");
}
}